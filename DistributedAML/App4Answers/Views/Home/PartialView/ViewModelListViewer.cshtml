
@{
    ViewData["Title"] = "GenericView";
    
}

@using System.Linq
@using App4Answers.Models.A4Amodels
@model App4Answers.Models.A4Amodels.ViewModelListBase

<div class="row" style="height:20px"></div>    

<div class="col-sm-1">
    
</div>

<div class="col-sm-10" style="color:black" >
    <table class="table">
        <thead class="thead-inverse" >
        <tr>
            @foreach (var c in Model.GetColumns().Where(x=>x.Display()))
            {
                <th class="well well-lg a4aheader">
                    @c.DisplayName()
                </th>

            }
            <th class="well well-lg a4aheader"></th>
            <th class="well well-lg a4aheader"></th>

        </thead>

        <tbody>
        @foreach (var c in Model)
        {
            <tr>
                @foreach (var g in Model.GetColumns().Where(x=>x.Display()))
                {
                    <td class="well well-lg a4ainput">
                        <input style="background:white" readonly="readonly" type="text" class="form-control a4ainput" value="@c.GetValue(g.Name)"/>
                    </td>
                }
                <td class="well well-lg a4ainput" style="text-align: center">
                    <a style="padding-top:3px" asp-action="Administration" asp-route-objecttype="@Model.ObjectType" asp-route-verb="@ObjectTypesAndVerbs.Verb.Edit" asp-route-itemid ="@c.GetPrimaryKey()"><i style="font-size: 20px" class="glyphicon glyphicon-pencil"></i></a>
                </td>
                <td class="well well-lg" style="text-align: center">
                    <a style="padding-top:3px" asp-action="Administration" asp-route-objecttype="@Model.ObjectType" asp-route-verb="@ObjectTypesAndVerbs.Verb.Delete" asp-route-itemid="@c.GetPrimaryKey()"><i style="font-size: 20px;  " class="glyphicon glyphicon-remove"></i></a>
                </td>

            </tr>
        }
            
            
        <tr>
            <td class="well well-lg a4ainput" >
                <a asp-action="Administration" asp-route-objecttype="@Model.ObjectType" asp-route-verb="@ObjectTypesAndVerbs.Verb.New" style="padding-top: 2px;"><i style="font-size: 20px; color: blue" class="glyphicon glyphicon-pencil"></i>New @ViewData["objectType"]</a>
            </td>
            <td colspan="@Model.GetColumns().Count(x=>x.Display()) + 1">
                
            </td>
        </tr>

        </tbody>

    </table>
</div>

<div class="col-sm-1">

</div>
